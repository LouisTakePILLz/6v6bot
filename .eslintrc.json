{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:flowtype/recommended"
    ],
    "plugins": [
        "flowtype"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "comma-dangle": [
            "error",
            "only-multiline"
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allowAfterThis": true,
                "allowAfterSuper": true
            }
        ],
        "spaced-comment": [
          1,
          "always"
        ],
        "no-shadow": 0,
        "no-unused-vars": 1,
        "prefer-template": 0,
        "function-paren-newline": 0,
        "no-plusplus": [
            2,
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "max-len": 0,
        "no-console": 0,
        "class-methods-use-this": 0,
        "import/no-unresolved": 0,
        "import/extensions": 0
    }
}
